{% extends 'base.html.twig' %}

{% block title %}Todo{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Todo</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ todo.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ todo.name }}</td>
                </tr>
                <tr>
                    <th>Details</th>
                    <td>{{ todo.details }}</td>
                </tr>
                <tr>
                    <th>Completed</th>
                    <td>{{ todo.completed ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>

        <div class="d-flex">
            <a href="{{ path('app_todo_index') }}" class="btn btn-secondary">Back to List</a>

            <a href="{{ path('app_todo_edit', {'id': todo.id}) }}" class="btn btn-primary ms-2">Edit</a>

            {{ include('todo/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}