<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    {% block stylesheets %}
    {% endblock %}

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"></script>
    {% block javascripts %}
    {% endblock %}
</head>
<body>

<div class="container mt-4">
    <header class="d-flex justify-content-between align-items-center py-3 bg-light">
        <div>
            <a class="navbar-brand" href="{{ path('app_todo_index') }}">Todo App</a>
        </div>
        <nav>
            <ul class="nav nav-pills">
                <li class="nav-item">
                    <a href="{{ path('app_todo_index') }}" class="nav-link {{ app.request.attributes.get('_route') == 'app_todo_index' ? 'active' : '' }}">Home</a>
                </li>
                <li class="nav-item">
                    <a href="{{ path('app_todo_new') }}" class="nav-link {{ app.request.attributes.get('_route') == 'app_todo_new' ? 'active' : '' }}">New Todo</a>
                </li>
            </ul>
        </nav>
    </header>

    <div class="row" style="margin-top: 10px;">
        <div class="col-md-12">
            {% block body %}
            {% endblock %}
        </div>
    </div>

</div>
{# <div class="container">

    {% block body %}
    {% endblock %}
</div> #}
</body>
</html>
